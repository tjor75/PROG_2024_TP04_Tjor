@{
    ViewData["Title"] = "Armar paquete";
}

<h1>Armar paquete</h1>
@if (ViewBag.Error != null) {
    <p>@ViewBag.Error</p>
}
<section>
    <form action='@Url.Action("GuardarPaquete")'>
        <div>
            <h2>Destino</h2>
            <ol>
            @foreach (string destino in ViewBag.ListaDestinos)
            {
                <li>@destino</li>
            }
            </ol>
            <p>
                N°:
                <input type="number" name="Destino" min="1" max="@ViewBag.ListaDestinos.Count">
            </p>
        </div>
        <div>
            <h2>Hoteles</h2>
            <ol>
            @for (int i = 0; i < ViewBag.ListaHoteles.Count; i++) {
                <li class="itemGaleria">
                    <img src="~/img/@ViewBag.ListaHoteles[i]" alt="Hotel @(i+1)">
                </li>
            }
            </ol>
            <p>
                N°:
                <input type="number" name="Hotel" min="1" max="@ViewBag.ListaHoteles.Count">
            </p>
        </div>
        <div>
            <h2>Aéreos</h2>
            <ol>
            @for (int i = 0; i < ViewBag.ListaAereos.Count; i++) {
                <li class="itemGaleria">
                    <img src="~/img/@ViewBag.ListaAereos[i]" alt="Aéreo @(i+1)">
                </li>
            }
            </ol>
            <p>
                N°:
                <input type="number" name="Aereo" min="1" max="@ViewBag.ListaAereos.Count">
            </p>
        </div>
        <div>
            <h2>Excursiones</h2>
            <ol>
            @for (int i = 0; i < ViewBag.ListaExcursiones.Count; i++) {
                <li class="itemGaleria">
                    <img src="~/img/@ViewBag.ListaExcursiones[i]" alt="Aéreo @(i+1)">
                </li>
            }
            </ol>
            <p>
                N°:
                <input type="number" name="Excursion" min="1" max="@ViewBag.ListaExcursiones.Count">
            </p>
        </div>
        <input type="submit">
    </form>
</section>